<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:elevation="5dp"
                                       app:cardCornerRadius="4dp"
                                       android:layout_marginBottom="@dimen/recyclerMarginVert"
                                       android:layout_gravity="center"
                                       android:layout_height="wrap_content">


        <RelativeLayout android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorRecycler"
                        android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:text="1111111111"
                      android:textSize="25sp"
                      android:layout_marginTop="@dimen/recyclerMarginVert"
                      android:layout_marginLeft="@dimen/recyclerMarginHoriz"
                      android:id="@+id/recyclerCounterTitle"
                      android:layout_height="wrap_content"

            />

            <TextView android:layout_width="wrap_content"
                      android:layout_below="@id/recyclerCounterTitle"
                      android:text="2222"
                      android:id="@+id/recyclerCounterCurrentValue"
                      android:layout_marginLeft="@dimen/recyclerMarginHoriz"
                      android:layout_marginTop="@dimen/recyclerMarginVert"
                      android:layout_marginBottom="@dimen/recyclerMarginVert"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>








</LinearLayout>