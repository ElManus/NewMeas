<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:elevation="5dp"
                                       app:cardCornerRadius="4dp"
                                       android:layout_marginBottom="@dimen/recyclerMarginVert"
                                       android:layout_gravity="center"
                                       android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorRecycler"
                        android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:text="1111111111"
                      android:textSize="25sp"
                      android:layout_margin="8dp"
                      android:id="@+id/recyclerCounterTitle"
                      android:layout_height="wrap_content"

                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/dateCurrentValue"
                      app:layout_constraintRight_toRightOf="@id/recyclerCounterCurrentValue"

                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="22.02.2019"
                      android:inputType="date"
                      android:id="@+id/dateCurrentValue"
                      android:layout_margin="8dp"

                      app:layout_constraintTop_toBottomOf="@id/recyclerCounterTitle"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="@id/recyclerCounterCurrentValue"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      android:textStyle="italic"/>

            <TextView android:layout_width="wrap_content"
                      android:text="2222"
                      android:id="@+id/recyclerCounterCurrentValue"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="@id/recyclerCounterTitle"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>








</LinearLayout>