<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="test"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/deletebutton" android:layout_marginEnd="114dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/message"/>
    <Button
            android:text="delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deletebutton" app:layout_constraintStart_toEndOf="@+id/addbutton"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/addbutton"/>
    <Button
            android:text="show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showbutton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/deletebutton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterName"
            app:layout_constraintStart_toEndOf="@+id/addbutton"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/deletebutton"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/showbutton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/message"/>
    <Button
            android:text="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextbutton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/showbutton"
    />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:scrollbars="vertical"
            android:id="@+id/listview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/showbutton" android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="245dp"
            android:ems="10"
            android:id="@+id/bigOut"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/listview"/>


</androidx.constraintlayout.widget.ConstraintLayout>